<?xml version="1.0" encoding="UTF-8"?>

<prelertViews>

	<!-- Evidence View -->
	<evidenceView>
		<name>Evidence View</name>
		<styleId>list-sec</styleId>
		<desktopShortcut>true</desktopShortcut>
		<timeFrame>SECOND</timeFrame>
		<dbView>evidence_second_view</dbView>
		<filterableAttributes>
			<attributeName>appid</attributeName>
			<attributeName>description</attributeName>
			<attributeName>ipaddress</attributeName>
			<attributeName>node</attributeName>
			<attributeName>service</attributeName>
			<attributeName>severity</attributeName>
			<attributeName>source</attributeName>
			<attributeName>username</attributeName>
		</filterableAttributes>
		<filterAttribute>severity</filterAttribute>
		<filterValue>unknown</filterValue>
		<doubleClickTool></doubleClickTool>
		<contextMenu>
			<menuItem toolClass="com.prelert.data.CausalityViewTool">
				<name>Show Probable Cause</name>
				<viewToOpen>Causality View</viewToOpen>
			</menuItem>
			<menuItem toolClass="com.prelert.data.HistoryViewTool">
				<name>Show History</name>
				<viewToOpen>History View</viewToOpen>
				<timeFrame>SECOND</timeFrame>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show User Usage</name>
				<viewToOpen>User Usage</viewToOpen>
				<metric>total</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<userArg>username</userArg>
				<timeArg>time</timeArg>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show Service Usage</name>
				<viewToOpen>Service Usage</viewToOpen>
				<metric>serverload</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<userArg>service</userArg>
				<timeArg>time</timeArg>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show IPC Usage</name>
				<viewToOpen>IPC Usage</viewToOpen>
				<metric>inbound</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<timeArg>time</timeArg>
			</menuItem>
		</contextMenu>
	</evidenceView>
	
	
	<!-- Exception View -->
	<exceptionView>
		<name>Exception List</name>
		<styleId>list-exception</styleId>
		<desktopShortcut>true</desktopShortcut>
		<noiseLevel>50</noiseLevel>
		<timeWindow>DAY</timeWindow>
		<dbView>evidence_second_view</dbView>
		<doubleClickTool></doubleClickTool>

		<contextMenu>
			<menuItem toolClass="com.prelert.data.ListViewTool">
				<name>Show Evidence</name>
				<viewToOpen>Evidence View</viewToOpen>
			</menuItem>
			<menuItem toolClass="com.prelert.data.CausalityViewTool">
				<name>Show Probable Cause</name>
				<viewToOpen>Causality View</viewToOpen>
			</menuItem>
			<menuItem toolClass="com.prelert.data.HistoryViewTool">
				<name>Show History</name>
				<viewToOpen>History View</viewToOpen>
				<timeFrame>SECOND</timeFrame>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show User Usage</name>
				<viewToOpen>User Usage</viewToOpen>
				<metric>total</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<userArg>username</userArg>
				<timeArg>time</timeArg>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show Service Usage</name>
				<viewToOpen>Service Usage</viewToOpen>
				<metric>serverload</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<userArg>service</userArg>
				<timeArg>time</timeArg>
			</menuItem>
			<menuItem toolClass="com.prelert.data.UsageViewTool">
				<name>Show IPC Usage</name>
				<viewToOpen>IPC Usage</viewToOpen>
				<metric>inbound</metric>
				<timeFrame>HOUR</timeFrame>
				<sourceArg>source</sourceArg>
				<timeArg>time</timeArg>
			</menuItem>
		</contextMenu>

	</exceptionView>


	<!-- History View -->
	<historyView>
		<name>History View</name>
		<styleId>list-week</styleId>
		<desktopShortcut>false</desktopShortcut>
		<evidenceView viewClass="com.prelert.data.EvidenceView">
			<name>Evidence By Day</name>
			<styleId>list-day</styleId>
			<timeFrame>DAY</timeFrame>
			<dbView>evidence_day_view</dbView>
			<defaultOrderBy>
				<sortInfo>
					<columnName>day</columnName>
					<sortDirection>DESC</sortDirection>
				</sortInfo>
			</defaultOrderBy>
		</evidenceView>
		<evidenceView viewClass="com.prelert.data.EvidenceView">
			<name>Evidence By Hour</name>
			<styleId>list-hour</styleId>
			<timeFrame>HOUR</timeFrame>
			<dbView>evidence_hour_view</dbView>
			<defaultOrderBy>
				<sortInfo>
					<columnName>hour</columnName>
					<sortDirection>DESC</sortDirection>
				</sortInfo>
			</defaultOrderBy>
		</evidenceView>
		<evidenceView viewClass="com.prelert.data.EvidenceView">
			<name>Evidence By Minute</name>
			<styleId>list-min</styleId>
			<timeFrame>MINUTE</timeFrame>
			<dbView>evidence_minute_view</dbView>
			<defaultOrderBy>
				<sortInfo>
					<columnName>minute</columnName>
					<sortDirection>DESC</sortDirection>
				</sortInfo>
			</defaultOrderBy>
		</evidenceView>
		<evidenceView viewClass="com.prelert.data.EvidenceView">
			<name>Evidence By Second</name>
			<styleId>list-sec</styleId>
			<timeFrame>SECOND</timeFrame>
			<dbView>evidence_second_view</dbView>
			<defaultOrderBy>
				<sortInfo>
					<columnName>time</columnName>
					<sortDirection>DESC</sortDirection>
				</sortInfo>
			</defaultOrderBy>
			<contextMenu>
				<menuItem toolClass="com.prelert.data.ListViewTool">
					<name>Show Evidence</name>
					<viewToOpen>Evidence View</viewToOpen>
				</menuItem>
				<menuItem toolClass="com.prelert.data.CausalityViewTool">
					<name>Show Probable Cause</name>
					<viewToOpen>Causality View</viewToOpen>
				</menuItem>
				<menuItem toolClass="com.prelert.data.UsageViewTool">
					<name>Show User Usage</name>
					<viewToOpen>User Usage</viewToOpen>
					<metric>total</metric>
					<timeFrame>HOUR</timeFrame>
					<sourceArg>source</sourceArg>
					<userArg>username</userArg>
					<timeArg>time</timeArg>
				</menuItem>
				<menuItem toolClass="com.prelert.data.UsageViewTool">
					<name>Show Service Usage</name>
					<viewToOpen>Service Usage</viewToOpen>
					<metric>serverload</metric>
					<timeFrame>HOUR</timeFrame>
					<sourceArg>source</sourceArg>
					<userArg>service</userArg>
					<timeArg>time</timeArg>
				</menuItem>
				<menuItem toolClass="com.prelert.data.UsageViewTool">
					<name>Show IPC Usage</name>
					<viewToOpen>IPC Usage</viewToOpen>
					<metric>inbound</metric>
					<timeFrame>HOUR</timeFrame>
					<sourceArg>source</sourceArg>
					<timeArg>time</timeArg>
				</menuItem>
			</contextMenu>
		</evidenceView>
	</historyView>
	
	
