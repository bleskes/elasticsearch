    <security:authentication-manager>
		<security:authentication-provider user-service-ref="userDetailsService">
			<security:password-encoder hash="sha"/>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<bean id="userDetailsService"
		class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl">
		<property name="dataSource" ref="dataSource"/>
		<property name="usersByUsernameQuery" value="select username,userpwd,'true' as enabled from users where username = ?"/>
		<property name="authoritiesByUsernameQuery" value="select username,rolename from user_roles where username = ?"/>
		<property name="rolePrefix" value="ROLE_"/>
	</bean>


