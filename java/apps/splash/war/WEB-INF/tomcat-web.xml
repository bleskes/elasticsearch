<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
			
	<display-name>Prelert V3</display-name>
	<description>
	 	Prelert GUI.
	</description>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>
	
	<filter>
		<filter-name>ValidSessionFilter</filter-name>
		<filter-class>com.prelert.web.ValidSessionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>ValidSessionFilter</filter-name>
		<url-pattern>/splash/services/*</url-pattern>
	</filter-mapping>
	
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	<servlet>
		<servlet-name>prelert</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>prelert</servlet-name>
		<url-pattern>/splash/services/*</url-pattern>
	</servlet-mapping>
	

	<welcome-file-list>
		<welcome-file>Splash.html</welcome-file>
	</welcome-file-list>
	
	
	<session-config> 
		<session-timeout>480</session-timeout> 
	</session-config>
	
	
	<security-constraint>
		<display-name>Prelert User Authentication</display-name>
		<web-resource-collection>
			<web-resource-name>Prelert UI</web-resource-name>
			<url-pattern>/Splash.html</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>administrator</role-name>
		</auth-constraint>
	</security-constraint>


	<!-- Default login configuration should use form-based authentication -->
	<login-config>	
		<auth-method>FORM</auth-method>
		<realm-name>Prelert UI</realm-name> 
		<form-login-config>
        	<form-login-page>/login.jsp</form-login-page>
        	<form-error-page>/login_error.jsp</form-error-page>
    	</form-login-config>
	</login-config>
	

	<security-role>
        <role-name>administrator</role-name>
    </security-role>

</web-app>