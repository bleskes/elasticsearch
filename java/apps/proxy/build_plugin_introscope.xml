<?xml version="1.0" encoding="UTF-8"?>
<project name="Prelert Proxy Introscope Plugin" default="build" basedir=".">
	<description>
		Build file for the Prelert Proxy Introscope Plugin.
	</description>

	<property environment="env" />
	
	<!-- Set base directory properties -->
	<property name="project.basedir" value="." />
	<property name="java.basedir" value="../.." />
	<property name="resources" location="${java.basedir}/resources" />

	<!-- Read Platfrom specfic property file -->
	<condition property="property_file" value="${resources}/ant/build_linux.properties">
		<os name="Linux" />
	</condition>

	<condition property="property_file" value="${resources}/ant/build_osx.properties">
		<os family="mac" />
	</condition>

	<condition property="property_file" value="${resources}/ant/build_solaris_sparc.properties">
        <os name="SunOS" arch="sparc" />
    </condition>

    <condition property="property_file" value="${resources}/ant/build_solaris_x86.properties">
		<os name="SunOS" />
	</condition>

	<!-- Before checking for Windows, check if we're running within an msysgit shell -->
	<condition property="property_file" value="${resources}/ant/build_mingw.properties">
		<isset property="env.MSYSTEM" />
	</condition>

	<condition property="property_file" value="${resources}/ant/build_win.properties">
		<!-- Due to the test above, this means native Windows -->
		<os family="windows" />
	</condition>

	<fail message="Could not set plaftorm property file">
		<condition>
			<not>
				<isset property="property_file" />
			</not>
		</condition>
	</fail>

	<echo message="Using ${property_file}"/>

 	<property file="${property_file}" />


	<!-- Set global properties for this build -->
	<property name="name" value="prelert"/>
	<property name="src.dir" location="${java.basedir}/src" />
	<property name="build.dir" location="${project.basedir}/build" />
	<property name="git.basedir" location="${java.basedir}/.." />
	<property name="prelert.home" location="${env.PRELERT_HOME}" />
	<property name="prelert.home.proxy" value="${prelert.home}/proxy" />


	<property name="apache.basedir" location="${libs.basedir}/apache" />
	<property name="apache.commons.basedir" location="${apache.basedir}/commons" />

    <!-- boot classpath -->
    <path id="boot.classpath">   
        <fileset dir="${java6.bootstrap.path}">
            <include name="rt.jar" />
            <include name="jce.jar" />
        </fileset>   
    </path>

	<!-- Apache Commons JARS -->
	<path id="apache-commons">
		<fileset dir="${apache.commons.basedir}/commons-cli-1.2">
			<include name="commons-cli-1.2.jar" />
		</fileset>
		<fileset dir="${apache.commons.basedir}/commons-discovery-0.4">
			<include name="commons-discovery-0.4.jar" />
		</fileset>
        <fileset dir="${apache.commons.basedir}/commons-codec-1.6">
            <include name="commons-codec-1.6.jar" />
        </fileset>
	</path>

	<!-- Apache log4j JAR Path -->
	<path id="log4j.path">
		<fileset dir="${apache.basedir}/apache-log4j-1.2.16">
			<include name="log4j-1.2.16.jar" />
		</fileset>
	</path>

	<!-- Apache Axis JAR Path -->
	<path id="axis.path">
		<fileset dir="${apache.basedir}/axis-1.4/lib">
			<include name="axis.jar" />
			<include name="jaxrpc.jar" />
			<!-- May need to add SAAJ too -->
		</fileset>
	</path>

	<!-- Java Mail JAR Path -->
	<!-- (Only needed to prevent Apache Axis printing a warning message) -->
	<path id="javamail.path">
		<fileset dir="${libs.basedir}/javamail-1.4.3">
			<include name="mail.jar" />
		</fileset>
	</path>
	
	<!-- Introscope Command Line Workstation Versions -->
	<path id="introscopeClw8.path">
		<fileset dir="${libs.basedir}/Introscope/CLW/Introscope 8.0.1.0">
			<include name="CLWorkstation.jar" />
		</fileset>
	</path>
    <path id="introscopeClw9.path">
		<fileset dir="${libs.basedir}/Introscope/CLW/Introscope 9.0.6.5">
			<include name="CLWorkstation.jar" />
		</fileset>
	</path>

	<!-- WSDL -->
	<path id="wsdl.path">
		<fileset dir="${libs.basedir}/wsdl4j-1.6.2/lib">
			<include name="wsdl4j.jar" />
		</fileset>
	</path>
	
	<!-- SuperCSV -->
    <path id="superCsv.path">
		<fileset dir="${libs.basedir}/SuperCSV-1.52/">
			<include name="SuperCSV-1.52.jar" />
		</fileset>
	</path>

	<!-- Classpath for server-side classes -->
	<path id="build.classpath">
        <path refid="apache-commons" />
		<path refid="log4j.path" />
		<path refid="axis.path" />
		<path refid="javamail.path" />
		<path refid="superCsv.path" />
	</path>

	<target name="build" description="compile the source">
		<!-- Compiles the Java source code -->
		<echo message="Compiling the Proxy Introscope Plugin classes" />

		<mkdir dir="${build.dir}"/>

        <!-- compile the main classes -->
        <javac sourcepath="" srcdir="${src.dir}" destdir="${build.dir}"
			encoding="utf-8" source="1.6" target="1.6" deprecation="off" includeantruntime="false">
            <bootclasspath>
                <path refid="boot.classpath" />
            </bootclasspath>
			<classpath>
				<path refid="build.classpath" />
			</classpath>
			<compilerarg value="-Xmaxerrs"/>
			<compilerarg value="250"/>

            <include name="com/prelert/data/*"/>
			<include name="com/prelert/proxy/plugin/introscope/**"/>
            <include name="com/prelert/proxy/inputmanager/loadmonitor/*"/>
            <include name="com/prelert/proxy/regex/**"/>
            <include name="com/prelert/proxy/runpolicy/*"/>
            <include name="com/prelert/proxy/data/*"/>
            <include name="com/prelert/proxy/data/introscope/*"/>
            <include name="com/prelert/proxy/encryption/*"/>
            <include name="com/prelert/proxy/inputmanager/InputManagerType*"/>
            <include name="com/prelert/proxy/plugin/*"/>
            
            <exclude name="com/prelert/data/gxt/**"/>
            <exclude name="com/prelert/proxy/plugin/introscope/webservice/**"/> 
            <exclude name="com/prelert/proxy/plugin/introscope/clworkstation/**"/>   
		</javac>
        
        
         <!-- compile version 8.0 -->
        <javac srcdir="${src.dir}" destdir="${build.dir}"
            encoding="utf-8" source="1.6" target="1.6" deprecation="off" includeantruntime="false">
            <bootclasspath>
                <path refid="boot.classpath" />
            </bootclasspath>
            <classpath>
                <path refid="build.classpath" />
                <path refid="introscopeClw8.path" />
            </classpath>
            <compilerarg value="-Xmaxerrs"/>
            <compilerarg value="250"/>

            <include name="com/prelert/proxy/plugin/introscope/clworkstation/**"/>
            <exclude name="com/prelert/proxy/plugin/introscope/clworkstation/CLWorkstation9Cmd.java"/>                        
        </javac>
        
        <!-- compile version 9.0 -->
        <javac srcdir="${src.dir}" destdir="${build.dir}"
            encoding="utf-8" source="1.6" target="1.6" deprecation="off" includeantruntime="false">
            <bootclasspath>
                <path refid="boot.classpath" />
            </bootclasspath>
            <classpath>
                <path refid="build.classpath" />
                <path refid="introscopeClw9.path" />
            </classpath>
            <compilerarg value="-Xmaxerrs"/>
            <compilerarg value="250"/>

            <include name="com/prelert/proxy/plugin/introscope/clworkstation/**"/>
            <exclude name="com/prelert/proxy/plugin/introscope/clworkstation/CLWorkstation8Cmd.java"/>                        
        </javac> 
   
            
	</target>
        

	<target name="prelert-home-install" depends="build" description="Installs the Proxy Introscope Plugin into $PRELERT_HOME/proxy">
		<echo message="Installing jar files into ${prelert.home.proxy}/lib" />

		<mkdir dir="${prelert.home.proxy}"/>
		<mkdir dir="${prelert.home.proxy}/lib"/>
        
        <!-- Get the build number -->
        <condition property="build.number" value="${env.PRELERT_BUILD_NUM}" else="DEVELOPMENT BUILD by ${user.name}">
            <isset property="env.PRELERT_BUILD_NUM" />        
        </condition>
        
        <!-- Read in version properties -->
        <property file="${git.basedir}/version.properties"/>  

		<jar destfile="${prelert.home.proxy}/lib/plugin_introscope.jar" basedir="${build.dir}" includes="com/prelert/proxy/plugin/introscope/**">
            <manifest>
                <attribute name="Version" value="${version.major}.${version.minor}.${version.revision}"/>
                <attribute name="Build" value="${build.number}"/>
                <attribute name="Main-Class" value="com.prelert.proxy.plugin.introscope.CatalogueIntroscope"/>
            </manifest>
        </jar>

		<copy todir="${prelert.home.proxy}/lib" flatten="true">
			<path refid="log4j.path" />
			<path refid="axis.path" />
			<path refid="javamail.path" />
			<path refid="apache-commons" />
			<path refid="wsdl.path" />
            <path refid="superCsv.path" /> <!-- Needed for introscopeCLW -->
		</copy>

        <!-- Ant copy does not preserve file permissions so we have to do it like this instead -->
		<echo message="Copying scripts to ${prelert.home.proxy}/bin" />
		
		<exec executable="${copy.cmd}" >
			<arg value="${project.basedir}/bin/catalogueIntroscope.sh" />
			<arg value="${prelert.home.proxy}/bin" />
		</exec>

		<exec executable="${copy.cmd}" >
			<arg value="${project.basedir}/bin/catalogueIntroscope.bat" />
			<arg value="${prelert.home.proxy}/bin" />
		</exec>

		<!-- Plugin properties files are installed from the individual customer config directory. -->

	</target>

	<target name="clean" description="Clean .class files from output directories">

		<mkdir dir="${build.dir}" />

		<!-- Delete the server-side classes -->
		<delete>
			<fileset dir="${build.dir}">
				<include name="com/prelert/proxy/plugin/introscope/**/*.class"/>
			</fileset>
		</delete>

	</target>

</project>
