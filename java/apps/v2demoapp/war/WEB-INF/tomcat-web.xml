<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
			
	<display-name>PrelertGWT</display-name>
	<description>
	 	GWT Prelert test desktop.
	</description>
	
	<filter>
		<filter-name>ValidSessionFilter</filter-name>
		<filter-class>com.prelert.web.ValidSessionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>ValidSessionFilter</filter-name>
		<url-pattern>/desktopapp/services/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>prelertGWT</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>prelertGWT</servlet-name>
		<url-pattern>/desktopapp/services/*</url-pattern>
	</servlet-mapping>
	

	<welcome-file-list>
		<welcome-file>DesktopApp.html</welcome-file>
	</welcome-file-list>
	
	
	<session-config> 
		<session-timeout>1</session-timeout> 
	</session-config>
	
	
	<security-constraint>
		<display-name>Prelert User Authentication</display-name>
		<web-resource-collection>
			<web-resource-name>Prelert Desktop</web-resource-name>
			<url-pattern>/DesktopApp.html</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>administrator</role-name>
		</auth-constraint>
		<!--  
			<user-data-constraint> 
				<transport-guarantee>CONFIDENTIAL</transport-guarantee>
			</user-data-constraint>
		-->
		
	</security-constraint>


	<!-- Default login configuration should use form-based authentication -->
	<login-config>	
		<auth-method>FORM</auth-method>
		<realm-name>Prelert Desktop</realm-name> 
		<form-login-config>
        	<form-login-page>/login.html</form-login-page>
        	<form-error-page>/login_error.html</form-error-page>
    	</form-login-config>
	</login-config>
	

	<security-role>
        <role-name>administrator</role-name>
    </security-role>

</web-app>