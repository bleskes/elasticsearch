<module rename-to='desktopapp'>

	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />
	
	<inherits name='com.extjs.gxt.ui.GXT' />
	<!--  <inherits name='com.extjs.gxt.samples.resources.Resources' /> -->
	<inherits name='com.extjs.gxt.desktop.WebDesktop' />
	
	
	<inherits name='com.extjs.gxt.charts.Chart' />

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
<!--	<inherits name='com.google.gwt.user.theme.standard.Standard' />-->
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->
	
	<!--  For Internationalization, inherit the GWT I18N module		 -->
	<inherits name='com.google.gwt.i18n.I18N' />
	
	<inherits name='pl.balon.gwt.diagrams.Diagrams'/>
	

	<!-- Other module inherits                                      -->
	<!-- For building charts with the gchart library				-->
	<inherits name='com.googlecode.gchart.GChart'/>
	
	<!-- For the Google Visualization API							-->
	<inherits name='com.google.gwt.visualization.Visualization'/>
	
	<!-- For the ValueSpinner from the GWT Incubator project		-->
	<inherits name='com.google.gwt.gen2.picker.Picker' /> 
	<inherits name='com.google.gwt.gen2.base.Base' />    
	
	<!-- For the GWT Canvas from the GWT Incubator project			-->
	<inherits name='com.google.gwt.widgetideas.GWTCanvas' />
	
	<extend-property name="locale" values="fr"/>


	<!-- Specify the app entry point class.                         -->
	<entry-point class='demo.app.client.DesktopApp' />
	
	<source path="client" excludes="chart/JFreeChartTestApp.java, chart/ChronoscopeChartWindow.java">
	</source>
	<source path="data" />
	<source path="service" />
	


	<!-- Specify the application specific style sheet.              -->
<!--	<stylesheet src='DesktopApp.css' />-->

</module>

