<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!--
    Main Maven build file for the Engine REST API.
    Calls 3 sub-modules
      Engine API - The REST API
      Client - REST API test client written in Java
      Server - The API server and dependencies
    -->

  <groupId>com.prelert</groupId>
  <version>1.0.1</version>
  <artifactId>engineAPI</artifactId>
  <packaging>pom</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <modules>
    <module>engineApi</module>
    <module>apiClient</module>
    <module>apiServer</module>
  </modules>


  <build>
    <plugins>
      <!-- Copy resources from ./config/ to the build area -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copy-resources-config</id>
            <phase>install</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${env.PRELERT_HOME}/config</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/config</directory>
                  <filtering>true</filtering>
                  <excludes>
                    <exclude>elasticsearch_scripts/**</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>      
          </execution>

          <execution>
            <id>copy-resources-readme</id>
            <phase>install</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${env.PRELERT_HOME}</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}</directory>
                  <include>README.txt</include>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <dependencyDetailsEnabled>false</dependencyDetailsEnabled>
          <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.5.4</version>
        <configuration>
          <threshold>High</threshold>
          <effort>Default</effort>
          <dependencyDetailsEnabled>false</dependencyDetailsEnabled>
          <dependencyLocationsEnabled>false</dependencyLocationsEnabled>          
        </configuration>
      </plugin>
    </plugins>
  </reporting>

</project>
